<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/cardview"
        android:layout_margin="4dp"
        app:cardElevation="2dp"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="true">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content">

                <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                           android:id="@+id/profile_image"
                           android:background="@color/divider"
                           android:layout_width="35dp"
                           android:layout_height="35dp"/>

            </android.support.v7.widget.CardView>

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_gravity="center_vertical"
                          android:orientation="vertical"
                          android:layout_height="wrap_content">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="horizontal"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="match_parent"
                              android:id="@+id/text_name"
                              android:layout_margin="1dp"
                              android:textSize="12sp"
                              android:layout_height="wrap_content"/>

                    <com.hedgehog.ratingbar.RatingBar
                            android:id="@+id/ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:clickable="false"
                            app:halfstart="true"
                            android:layout_margin="1dp"
                            app:starEmpty="@mipmap/ic_star_empty"
                            app:starFill="@mipmap/ic_star_fill"
                            app:starHalf="@drawable/ic_star_half"
                            app:starCount="5"
                            app:starImageHeight="16dp"
                            app:starImageWidth="16dp"
                            android:paddingStart="5dp"
                            tools:ignore="RtlSymmetry"/>

                </LinearLayout>

                <TextView android:layout_width="match_parent"
                          android:id="@+id/text_date"
                          android:layout_margin="2dp"
                          android:textSize="10sp"
                          android:layout_height="wrap_content"
                          tools:ignore="SmallSp"/>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:layout_gravity="center_vertical"
                          android:layout_margin="10dp"
                          android:layout_height="wrap_content">

                <ImageView android:layout_width="14dp"
                           android:layout_gravity="center_horizontal"
                           android:id="@+id/image_like"
                           android:layout_height="14dp"/>

                <TextView android:layout_width="wrap_content"
                          android:id="@+id/text_like"
                          android:lines="1"
                          android:textSize="10sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:id="@+id/text_comment"
                  android:textColor="@color/md_dark_cards"
                  android:layout_marginStart="5dp"
                  android:layout_marginEnd="5dp"
                  android:layout_marginTop="1dp"
                  android:layout_marginBottom="7dp"
                  android:textSize="14sp"
                  android:lineSpacingMultiplier="1.2"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>