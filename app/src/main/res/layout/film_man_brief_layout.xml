<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="5dp"
        app:cardElevation="5dp"
        android:clickable="true"
        android:focusable="true"
        app:cardPreventCornerOverlap="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:descendantFocusability="blocksDescendants"
                  android:layout_marginTop="5dp"
                  android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:id="@+id/layout_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/image"
                        android:layout_margin="8dp"
                        android:background="@color/md_grey_300"
                        android:scaleType="centerCrop"
                        android:layout_width="120dp"
                        android:layout_height="176dp"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/header_layout"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView android:id="@+id/manname_text"
                              android:layout_width="match_parent"
                              android:layout_marginTop="0dp"
                              android:layout_marginStart="0dp"
                              android:textStyle="bold"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/image_cardview"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="影人图片"/>


                <HorizontalScrollView android:padding="4dp"
                                      android:focusable="true"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:id="@+id/image_layout"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content"/>

                </HorizontalScrollView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/brief_cardview"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="影人简介"/>

                <TextView android:id="@+id/mTextBrief"
                          android:paddingTop="4dp"
                          android:paddingBottom="5dp"
                          android:lineSpacingMultiplier="1.2"
                          android:paddingStart="5dp"
                          android:paddingEnd="5dp"
                          android:textIsSelectable="true"
                          android:focusable="true"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/award_cardview"
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:id="@+id/award_layout"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="获奖情况"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/recentwork_cardview"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="最近的5部作品"/>

                <HorizontalScrollView android:focusable="true"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:id="@+id/recentwork_layout"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content"/>

                </HorizontalScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/topwork_cardview"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="最受好评的5部作品"/>

                <HorizontalScrollView android:focusable="true"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:id="@+id/topwork_layout"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content"/>

                </HorizontalScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:layout_margin="5dp"
                app:cardElevation="3dp"
                android:clickable="true"
                android:focusable="true"
                app:cardPreventCornerOverlap="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:layout_margin="5dp"
                          android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_marginTop="3dp"
                          android:layout_marginStart="5dp"
                          android:textStyle="bold"
                          android:layout_height="wrap_content"
                          android:text="合作2次以上的影人"/>

                <HorizontalScrollView android:focusable="true"
                                      android:layout_width="match_parent"
                                      android:layout_height="wrap_content">

                    <LinearLayout android:layout_width="wrap_content"
                                  android:id="@+id/workmate_layout"
                                  android:orientation="horizontal"
                                  android:layout_height="wrap_content"/>

                </HorizontalScrollView>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>